from datetime import date

ano_atual = date.today().year

total_maior_idade = 0
total_menor_idade = 0

for candidato in range(1,8):

    candidatos  = int(input(f'Em qual ano o candidato numero {candidato} nasceu ?'))
    idade_atual = ano_atual - candidatos

    if idade_atual > 21:
        total_maior_idade += 1
    else:
        total_menor_idade += 1

print(f'O numero de pessoas com a maioridade é {total_maior_idade}\n'
      f'e o numero de que não tem a maioridade é {total_menor_idade}')
